{
  "name": "maccleaner",
  "productName": "MacCleaner",
  "description": "A premium macOS system cleaner and optimizer",
  "private": true,
  "author": "Praveen Verma",
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint .",
    "dist": "tsc && vite build && electron-builder"
  },
  "build": {
    "appId": "com.praveenverma.maccleaner",
    "productName": "MacCleaner",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/app-icon.png"
    }
  },
  "dependencies": {
    "lucide-react": "^0.561.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sudo-prompt": "^9.2.1",
    "systeminformation": "^5.27.14"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^4.5.3",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}